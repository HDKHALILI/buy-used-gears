
<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="field">
      <div class="control">
          <%= f.input :name , required: true, input_html: { class: "input"}, wrapper: false, label_html: { class:"label" } %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= f.input :address, required: true, input_html: { class:"textarea" }, wrapper: false, label_html: { class:"label" } %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= f.input :email, required: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>        
      </div>
    </div>
    <div class="field">
      <div class="control">
        <label class="label">Payment Method</label>
        <div class="control has-icons-left">
            <span class="select">
              <%= f.input_field :pay_type, collection: Order.pay_types, prompt: "Select a payment method" %>
            </span>
            <span class="icon is-small is-left">
              <i class="fa fa-credit-card"></i>
            </span>
        </div>
        <%#= f.select :pay_type, Order.pay_types.keys, prompt: "Select a payment method" %>
      </div>
    </div>
  </div>
  <hr>
  <div class="field is-grouped">
    <div class="control">
      <%= f.button :submit, "Place Order", class: 'button is-warning' %>
      <%= link_to 'Cancel', cameras_path, class:'button is-light' %>
    </div>
  </div>
<% end %>
